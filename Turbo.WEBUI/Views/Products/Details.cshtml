@section Scripts{
    <script>
        $(document).scroll(function () {
            var y = $(this).scrollTop();
            if (y > 700) {
                $('.product-sidebar-container').addClass('fixed');
            } else {
                $('.product-sidebar-container').removeClass('fixed');
            }
        });
    </script>
}