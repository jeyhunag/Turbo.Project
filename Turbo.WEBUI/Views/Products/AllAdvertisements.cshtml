@{
    ViewData["Title"] = "AllAdvertisements";
}

<section class="main_search">
    @await Component.InvokeAsync("Filter")
</section>
<section class="vıp_announcements">
    <div class="announcements">
        <div class="vıp_title">
            <h4>VIP ELANLAR</h4>
        </div>
        <div class="car_announcements">
            @await Component.InvokeAsync("AllProduct", new {filter=ViewBag.Filter, istype=true, type="Vip", pageIndex = ViewBag.Index, pageSize = ViewBag.PageSize })
        </div>

    </div>
</section>
<section class="recent_announcements">
    <div class="announcements">
        <div class="vıp_title">
            <h4>Elanlar</h4>
        </div>
        <div class="car_announcements">
            @await Component.InvokeAsync("AllProduct", new { pageIndex = ViewBag.Index, pageSize = ViewBag.PageSize })
        </div>
    </div>
</section>
